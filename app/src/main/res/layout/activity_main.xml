<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <!-- Top Right Image -->
    <ImageView
        android:id="@+id/topRightImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/thiruvalluvar"
        android:contentDescription="Thiruvalluvar"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Kural Number -->
    <TextView
        android:id="@+id/textNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/topRightImage"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Line 1 -->
    <TextView
        android:id="@+id/textLine1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/textNumber"
        app:layout_constraintStart_toStartOf="parent"
         />

    <!-- Line 2 -->
    <TextView
        android:id="@+id/textLine2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/textLine1"
        app:layout_constraintStart_toStartOf="parent"
        />

    <!-- English Translation -->
    <TextView
        android:id="@+id/textTranslation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:paddingTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/textLine2"
        app:layout_constraintStart_toStartOf="parent"
         />

    <!-- Tamil Meaning (mk) -->
    <TextView
        android:id="@+id/textMK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:paddingTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/textTranslation"
        app:layout_constraintStart_toStartOf="parent"
         />

    <!-- Next Button -->
    <Button
        android:id="@+id/buttonNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="இன்னோர் குறள்"
        app:layout_constraintTop_toBottomOf="@id/textMK"
        app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
